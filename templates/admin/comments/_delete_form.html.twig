<form method="post" action="{{ path('admin_comments_delete', {'id': comment.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce commentaire ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
	<button class="btn btn-danger">Supprimer</button>
</form>
