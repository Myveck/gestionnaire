{% extends 'base.html.twig' %}

{% block title %}Events index
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col">
				<h1>Events index</h1>

				<table class="table">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Description</th>
							<th>Adresse</th>
							<th>Date</th>
							<th>catégorie</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for event in events %}
							<tr>
								<td>{{ event.name }}</td>
								<td>{{ event.description }}</td>
								<td>
									{{ event.quater }}
									{{ event.city }}
								</td>
								<td>{{ event.eventDate ? event.eventDate|date('Y-m-d H:i') : '' }}</td>
								<td>{{ event.categorie.name }}</td>
								<td>
									<a href="{{ path('admin_events_show', {'id': event.id}) }}" class="col-6 btn btn-primary">Voir</a>
									<a href="{{ path('admin_events_edit', {'id': event.id}) }}" class="col-9 btn btn-secondary">Modifier</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="9">Aucun élément n'a été trouvé</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a href="{{ path('admin_events_new') }}">Créé un nouvel événement</a>
			</div>
		</section>
	</main>
{% endblock %}
