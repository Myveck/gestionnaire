{% extends 'base.html.twig' %}

{% block title %}Events
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col">
				<h1>Events</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Name</th>
							<td>{{ event.name }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ event.description }}</td>
						</tr>
						<tr>
							<th>City</th>
							<td>{{ event.city }}</td>
						</tr>
						<tr>
							<th>Quater</th>
							<td>{{ event.quater }}</td>
						</tr>
						<tr>
							<th>Event_date</th>
							<td>{{ event.eventDate ? event.eventDate|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Created_at</th>
							<td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('admin_events_index') }}">retours vers la liste</a>

				<a href="{{ path('admin_events_edit', {'id': event.id}) }}">Modifier</a>

				{{ include('admin/events/_delete_form.html.twig') }}
			</div>
		</section>
	</main>
{% endblock %}
