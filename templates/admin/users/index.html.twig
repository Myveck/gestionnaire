{% extends 'base.html.twig' %}

{% block title %}Détails utilisateurs
{% endblock %}

{% block body %}
	<h1>Détails sur les utilisateurs inscrits</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Email</th>
				<th>Telephone</th>
				<th>Roles</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.name }}</td>
					<td>{{ user.Surname }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.Telephone }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>
						<a href="{{ path('admin_users_show', {'id': user.id}) }}">Détails</a>
						<a href="{{ path('admin_users_edit', {'id': user.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Aucun utilisateur n'a été trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_users_new') }}">Create new</a>
{% endblock %}
