{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
				<h1>Categories</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ category.id }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ category.name }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ category.description }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('admin_categories_index') }}" class="btn btn-secondary">Retour vers categories</a>

				<a href="{{ path('admin_categories_edit', {'id': category.id})}}" class="btn btn-primary">Modifier</a>

				{{ include('admin/categories/_delete_form.html.twig') }}
			</div>
		</div>
	</section>
{% endblock %}
