{% extends "base.html.twig" %}

{% block title %}Evénément filtre
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="row shadow-sm py-3">
				<h3 class="lead text-center my-3">Filtrer par</h3>
				<div class="d-flex justify-content-around">
					{% for category in categories %}
						<div>
							<a href="{{ path('acceuil_filtre', {id : category.id}) }}" class="btn btn-secondary">{{ category.name }}</a>
						</div>
					{% endfor %}
					<div>
						<a href="{{ path('acceuil_filtre', {id : 'date'}) }}" class="btn btn-secondary">date</a>
					</div>
				</div>
			</div>
			<h1>Affichage avec le filtre
				{{ filtre }}</h1>
			{% if events %}
				{% for event in events %}
					<div class="col-3 my-3">
						<article class="card h-100">
							<img src="{{ asset('assets/uploads/products/mini/300x300-'~ event.images[0].name ) }}" alt="{{ event.name }}" class="card-img-top">

							<div class="card-body">
								<h2>{{ event.name }}</h2>
								<p class="card-text">{{ event.description }}</p>
								{{event.eventDate | date('d/m/Y H:i')}}
								<br>
								<a href="{{path('acceuil_details', {id: event.id})}}" class="btn btn-primary my-3">Détails</a>
							</div>
						</article>
					</div>
				{% endfor %}
			{% else %}
				<p class="lead">Aucun événement n'a été trouvé</p>
			{% endif %}

		</section>
	</main>
{% endblock %}
