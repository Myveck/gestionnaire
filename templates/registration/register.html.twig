{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}\
	<section class="container mb-3 py-3">
		<h1>S'inscrire</h1>
		<div class="row mb-3">
			<div class="col mb-3 py-3">
				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.surname) }}
				{{ form_row(registrationForm.name) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.telephone) }}
				{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-primary col-2 my-3">M'inscrire</button>
				<a href="{{path('app_login')}}" type="submit" class="btn btn-secondary col-2 mx-3 my-3">Me connecter</a>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
